extends layout

block content
  h1= title
  p Welcome to #{title}
  div.video_container
    video#cam_observer(autoplay=true)
    pre#output
      span.angry
        label angry:
        span.value
      br
      span.disgusted
        label disgusted:
        span.value
      br
      span.fearful
        label fearul:
        span.value
      br
      span.happy
        label happy:
        span.value
      br
      span.neutral
        label neutral:
        span.value
      br
      span.sad
        label sad:
        span.value
      br
      span.surprised
        label surprised:
        span.value
  canvas#video_out
  div#modal
    .content
      h1 Looks like you laughed!
      button.no No I didn't
      button.yes Yeah, that was funny!
  script(src="javascripts/let-me-make-you-laugh.js", type="module")
